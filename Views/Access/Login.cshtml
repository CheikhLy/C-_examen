@model ges_commande.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <form asp-controller="Access" asp-action="Login" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-full max-w-sm">
        <h1 class="text-2xl font-bold text-center mb-6 text-gray-800">Connexion</h1>
        
        <div class="mb-4">
            <label for="login" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
            <input 
                type="text" 
                id="login" 
                asp-for="login" 
                placeholder="Entrez votre email"
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            >
        </div>

        <div class="mb-4">
            <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Mot de passe</label>
            <input 
                type="password" 
                id="password" 
                asp-for="password" 
                placeholder="Entrez votre mot de passe"
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            >
        </div>

        @if (ViewData["ValidateMessage"] != null)
        {
            <div class="mb-4">
                <span class="text-red-500 text-sm">@ViewData["ValidateMessage"]</span>
            </div>
        }

        <div class="flex items-center justify-between">
            <button 
                type="submit" 
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
            >
                Se connecter
            </button>
        </div>
    </form>
</body>
</html>
