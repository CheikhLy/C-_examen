@using Cours.Enum
@model Cours.Models.Paiements

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Créer un Paiement</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center p-6">
    <div class="max-w-lg w-full bg-white p-8 rounded-lg shadow-lg">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Créer un Paiement</h1>
        <form asp-action="Create" method="post" class="space-y-6">
            <!-- Commande ID -->
            <div>
                <label for="commandeId" class="block text-sm font-medium text-gray-700">Commande ID</label>
                <input type="hidden" asp-for="commandeId" value="@ViewData["commandeId"]" />
                <p class="mt-1 text-gray-600">@ViewData["commandeId"]</p>
            </div>

            <!-- Réduction -->
            <div class="flex items-center space-x-3">
                <input type="checkbox" asp-for="reduction" id="reduction" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                <label for="reduction" class="text-sm text-gray-700">Réduction</label>
            </div>

            <!-- Type de Paiement -->
            <div>
                <label for="typePaiement" class="block text-sm font-medium text-gray-700">Type de Paiement</label>
                <select asp-for="typePaiement" class="mt-1 block w-full bg-gray-50 border border-gray-300 text-gray-700 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" asp-items="Html.GetEnumSelectList<TypePaiement>()">
                </select>
            </div>

            <!-- Bouton de soumission -->
            <div>
                <button type="submit" class="w-full bg-green-500 text-white py-2 px-4 rounded-lg shadow hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                    Confirmer Paiement
                </button>
            </div>
        </form>
    </div>
</body>
</html>
