@{
    ViewData["Title"] = "Créer une Demande";
    var message = ViewData["Message"] as string;
    var errors = ViewData["Errors"] as List<string> ?? new List<string>();
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreerCommande" method="post">
    @* <div class="form-group">
        <label for="CommandeId">ID de la Commande</label>
        <input type="number" class="form-control" id="CommandeId" name="CommandeId" required />
    </div> *@

    <div class="form-group">
        <label for="ProduitId">ID du Produit</label>
        <input type="number" class="form-control" id="ProduitId" name="ProduitId" required />
    </div>

    <div class="form-group">
        <label for="Quantite">Quantité</label>
        <input type="number" class="form-control" id="Quantite" name="Quantite" min="1" required />
    </div>

    <button type="submit" class="btn btn-primary">Créer</button>
</form>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info mt-3">
        @message
    </div>
}

@if (errors.Count > 0)
{
    <div class="alert alert-danger mt-3">
        <ul>
            @foreach (var error in errors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}
